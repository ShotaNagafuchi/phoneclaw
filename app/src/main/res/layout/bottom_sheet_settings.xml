<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_dashboard_title"
        android:textSize="20sp"
        android:textColor="#1e1e2e"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/permissions_dialog_title"
        android:textSize="16sp"
        android:textColor="#45475a"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="320dp">

        <LinearLayout
            android:id="@+id/permissionsDashboardList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="8dp" />
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/screen_capture_section_title"
        android:textSize="14sp"
        android:textColor="#1e1e2e"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/screen_capture_hint"
        android:textSize="12sp"
        android:textColor="#6c7086"
        android:layout_marginBottom="8dp" />
    <Button
        android:id="@+id/screen_capture_enable_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/screen_capture_enable_btn"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_dashboard_hint"
        android:textSize="12sp"
        android:textColor="#6c7086"
        android:layout_marginTop="16dp" />
</LinearLayout>
