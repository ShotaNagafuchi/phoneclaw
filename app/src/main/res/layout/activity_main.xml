<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11111b">

    <!-- Settings button (top-left) -->
    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="top|start"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_manage"
        android:contentDescription="è¨­å®š"
        android:padding="8dp"
        android:elevation="4dp"
        app:tint="#6c7086" />

    <!-- Status text (top-right, compact) -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:text="èµ·å‹•ä¸­..."
        android:textSize="11sp"
        android:textColor="#585b70"
        android:maxLines="1" />

    <!-- Orb (center, hero element) -->
    <com.example.universal.BreathingOrbView
        android:id="@+id/breathingOrbView"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:background="@android:color/transparent" />

    <!-- AI thought text (bottom center) -->
    <TextView
        android:id="@+id/aiThoughtText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:text="â€¦"
        android:textSize="16sp"
        android:textColor="#a6adc8"
        android:alpha="0.8"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Microphone FAB (bottom center) -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/microphoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="24dp"
        android:text="ðŸŽ¤"
        android:textSize="16sp"
        app:backgroundTint="#1e1e2e"
        app:strokeColor="#313244"
        app:strokeWidth="1dp"
        app:elevation="6dp" />

    <!-- Scrollable lower content (drag up to reveal) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="520dp"
        android:clipToPadding="false"
        android:paddingBottom="120dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Swipe hint -->
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/status_background" />

            <!-- AI Learning Log -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1e1e2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#313244"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="å­¦ç¿’ãƒ­ã‚°"
                        android:textSize="14sp"
                        android:textColor="#cba6f7"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/diaryList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Soul Editor -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1e1e2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#313244"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Soul"
                            android:textSize="14sp"
                            android:textColor="#f9e2af"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/saveSoulButton"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="ä¿å­˜"
                            android:textSize="12sp"
                            android:textColor="#1e1e2e"
                            app:backgroundTint="#a6e3a1"
                            app:cornerRadius="8dp"
                            style="@style/Widget.Material3.Button.TonalButton" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/soulEditor"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="#181825"
                        android:padding="12dp"
                        android:textSize="12sp"
                        android:textColor="#cdd6f4"
                        android:fontFamily="monospace"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        android:hint="soul.md ã‚’ç·¨é›†..."
                        android:textColorHint="#45475a" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>
